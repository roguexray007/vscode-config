{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build active file",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build",
            "detail": "compiler: g++ --std=c++17"
        },
        {
            "label": "Compile and run",
            "type": "shell",
            "command": "",
            "args": [
                "copy",
                "${file}",
                "${workspaceFolder}\\jspwTest.cpp",
                "&&",
                "g++",
                "--std=c++17",
                "-DLOCAL",
                "jspwTest.cpp",
                "-o",
                "jspwTest",
                "&&",
                "jspwTest",
                "<",
                "inputf.in",
                ">",
                "outputf.in",
                "&&",
                "del",
                "jspwTest.exe",
                "&&",
                "del",
                "jspwTest.cpp"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
    ]
}